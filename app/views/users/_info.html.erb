
<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
	</tr>

    <% @user ||= current_user %>
	  <tr><th><%=link_to 'フォロー数:', followings_user_path(@user) %>
  <%="#{user.followings.count}" %></th><th></th></tr>
    <tr><th><%=link_to 'フォロワー数:', followers_user_path(@user) %>
  <%="#{user.followers.count}" %></th><th></th></tr>
  
  <br>
  
　<% if current_user.following?(user) %>
    <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-sm btn-success" %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-sm btn-success" %>
  <% end %>
  

  <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</table>